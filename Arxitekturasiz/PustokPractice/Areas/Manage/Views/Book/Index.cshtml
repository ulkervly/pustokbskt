@model List<Book>
@{
    int counter = 0;
}
@section csss{
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.1/sweetalert2.min.css" integrity="sha512-l1vPIxNzx1pUOKdZEe4kEnWCBzFVVYX5QziGS7zRZE4Gi5ykXrfvUgnSBttDbs0kXe2L06m9+51eadS+Bg6a+A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Books:</h1>
        <a class="btn btn-primary" asp-action="create" asp-controller="book">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">SalePrice</th>
                <th scope="col">CostPrice</th>
                <th scope="col">DiscountPercent</th>
                <th scope="col">IsAvailable</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@book.Name</td>
                    <td>@book.Description</td>
                    <td>@book.Saleprice</td>
                    <td>@book.Costprice</td>
                    <td>@book.DiscountPercent</td>
                    <td>@book.IsAvailable</td>


                    <td>
                        <a asp-action="update" asp-controller="book" asp-route-id="@book.Id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="book" asp-route-id="@book.Id" class="btn btn-danger delete-btn">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts{
    <script src="~/assets/js/main.js">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/11.10.1/sweetalert2.min.js" integrity="sha512-lhtxV2wFeGInLAF3yN3WN/2wobmk+HuoWjyr3xgft42IY0xv4YN7Ao8VnYOwEjJH1F7I+fadwFQkVcZ6ege6kA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

}
